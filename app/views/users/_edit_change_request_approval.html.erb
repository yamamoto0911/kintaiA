<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
      <div class="modal-body">
        <div class="form-group field">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button><br><br>
          <%= form_with(model: @users, url: update_change_request_approval_user_url, method: :patch) do |f| %>
            <% @users.each do |user| %>
              <h4 class="modal-title" id="exampleModalLabel" align="center">【<%= user.name %>からの勤怠変更申請】</h4><br>
              <table class = "table-bordered table-condensed">
                <thead>
                  <tr>
                    <th rowspan = "3">日付</th>
                    <th rowspan = "3">曜日</th>
                    <th colspan = "4">変更前</th>
                    <th colspan = "4">変更後</th>
                    <th rowspan = "3">備考</th>
                    <th rowspan = "3">指示者確認㊞</th>
                    <th rowspan = "3">変更</th>
                    <th rowspan = "3">勤怠を確認する</th>
                  </tr>
                  <tr>
                    <th colspan = "2">出社</th>
                    <th colspan = "2">退社</th>
                    <th colspan = "2">出社</th>
                    <th colspan = "2">退社</th>
                  </tr>
                  <tr>
                    <th>時</th>
                    <th>分</th>
                    <th>時</th>
                    <th>分</th>
                    <th>時</th>
                    <th>分</th>
                    <th>時</th>
                    <th>分</th>
                  </tr>
                </thead>
                <tbody> 
                  <% @attendances.each do |at| %>
                    <% if at.user_id == user.id %>
                      <%= fields_for at do |af| %>
                        <tr>
                          <td><%= at.worked_on.to_s(:date) %></td>
                          <td><%= %w{日 月 火 水 木 金 土}[at.worked_on.wday] %></td>
                          <td><%= at.overwork_time.to_s(:time)  if at.overwork_time.present? %></td>
                          <td><%= format_basic_work_time(user.designated_work_end_time) %></td>
                          <td><%= overwork_times(user.designated_work_end_time, at.overwork_time, at.overwork_tomorrow) if at.overwork_time.present? %></td>
                          <td><%= at.overwork_note %></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td></td>
                          <td><%= at.note %></td>
                          <td><%= af.select :overwork_enum, Attendance.overwork_enums.keys, { include_blank: true } %></td>
                          <td><%= af.check_box :overwork_request_change ,{}, "true", "false" %></td>
                          <td><%= link_to "確認", user_path(id: user.id,first_day: at.worked_on.beginning_of_month), class: "btn btn-primary" %></td>
                        </tr>
                      <% end %>
                    <% end  %>  
                  <% end %>  
                </tbody>
              </table><br>
            <% end %>
            <%= f.submit "変更を送信する", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
  </div>
</div>